<head>
    <title>StreamOn</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/font-awesome/css/all.min.css">
</head>

<body>
    <section class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-3">
                <a href="/" class="d-flex justify-content-center">
                    <img class="mt-5" src="../imgs/logo.png" width="150">
                </a>
                <p class="d-flex justify-content-center">
                    Faça o login e aproveite os melhores filmes!
                </p>
                <form action="/" method="post" class="mt-4">
                    <fieldset class="p-4" style="color:#000; background-color:#fff; border-radius: 1rem;">
                        <div class="form-group">
                            <label>E-mail:</label>
                            <input class="form-control" type="email" name="email" id="email" placeholder="Insira seu email" required>
                        </div>
                        <div class="form-group">
                            <label>Senha:</label>
                            <input class="form-control" type="password" name="senha" id="senha" placeholder="Insira sua senha" required>
                        </div>
                        <div class="mt-5">
                            <button class="btn btn-sm btn-danger col-lg-4"><i class="fas fa-sign-in-alt"></i> Entrar</button>
                            <p class="col-lg-12 mt-3">
                                <small>
                                    <a href="/cadastro">Esqueceu a senha?</a>
                                </small>
                            </p>
                            <p class="col-lg-12 mt-3">
                                <small>
                                    Ainda não tem conta?
                                    <a href="/cadastro">Crie uma agora!</a>
                                </small>
                            </p>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="col-sm-12 col-md-8 col-lg-8">

                <img src="../imgs/filme20.jpeg" class="">
            </div>
        </div>
    </section>
</body>

<script src="/js/login.js"></script>

