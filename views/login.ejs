<head>
    <title>StreamOn</title>
    <meta charset="utf-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
</head>

<body>
    <section class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-sm-12">
            <a href="/">
                <img class="mt-5" src="imgs/logo.png" width="150">
            </a>
                <form action="" method="post" action="/" class="col-lg-12 mt-4 mb-4">
                    <fieldset class="p-4" style="color:#000; background-color:#fff; border-radius: 1rem;">
                        <div class="form-group">
                            <label>E-mail:</label>
                            <input class="form-control" type="email" name="email" id="email" maxlength="50" required>
                        </div>
                        <div class="form-group">
                            <label>Senha:</label>
                            <input class="form-control" type="password" name="senha" id="senha" maxlength="8" required>
                        </div>
                        <div class="mt-5">
                            <button class="btn btn-sm btn-danger col-sm-12">Confirmar</button>
                            <a href="/cadastro" class="btn btn-sm btn-secondary col-sm-12 mt-1">Cadastre-se</a>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="col-md-8 col-sm-12">

                <img src="../imgs/filme20.jpeg" class="w-100">
            </div>
        </div>
    </section>
</body>

<script src="/js/login.js"></script>

