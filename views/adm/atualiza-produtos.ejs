<html>

<head>
    <title>StreamOn</title>
    <meta charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>

    <div class="container">
        <header>
            <div class="row">
                <div class="col-sm-3">
                    <a href="/adm/">
                        <img src="/imgs/SQUADONE.png" width="150">
                    </a>
                </div>
                <div class="col-sm-7 d-flex justify-content-center">
                    <img src="/imgs/Streaming.png" class="mt-2"width="210">
                    </div>
                    <section class="container">
       
 <!-- =============== ATUALIZA PRODUTO ================== -->
   
                    <h4 class="card-title">Editar Produto</h4>
                    <form id="form-produto"class="form">
                        <fieldset>
                            <legend></legend>
                        <ul class="list-unstyled">
                            <li>
                                <label>Título:</label>
                                <input class="form-control" name="titulo" id="" value="<%=produtoDaVez[0].titulo%>">
                            </li>
                            <li>
                                <label>Gênero:</label>
                                <input class="form-control" name="genero" id="" value="<%=produtoDaVez[0].genero%>">
                            </li>
                            <li>
                                <label>Ano:</label>
                                <input class="form-control" name="Ano" id="" value="<%=produtoDaVez[0].Ano%>">
                            </li>
                            <li>
                                <label>Sinopse:</label>
                                <textarea class="form-control" name="sinopse" id=""><%=produtoDaVez[0].sinopse%></textarea>
                            </li>
                            <li>
                                <label>Imagem:</label>
                                <input class="form-control" name="imagem" id="" value="<%=produtoDaVez[0].imagem%>"" >
                            </li>
                            <li>
                                <label>promo:</label>
                                <input class="form-control" name="promo" id="" value="<%=produtoDaVez[0].promo%>">
                            </li>
                            <li>
                                <label>Valor:</label>
                                <input class="form-control" name="valor" id="" value="<%=produtoDaVez[0].valor%>"">
                            </li>
                            <li>
                                <label>trailer:</label>
                                <input class="form-control" name="trailer" id="" value="<%=produtoDaVez[0].trailer%>">
                            </li>
                            
            
                        </ul>
                        
                        </fieldset>
                            <div>
                            <button type="button"class="btn btn-info mt-5 bt-prod">Confirmar</button>
                                <button type="button" class="btn btn-primary mt-5 bt-voltar"> Voltar</button>
                    </form>
                </div>
            </div>
        </div>
    
</header>
</section>
    <!-- =============== Fim do Cadastro ================== -->
    <script>
         $().ready(function(){
        $('.bt-prod').click(function(){
            $.post(`./atualiza_single`,
            {
         id:'<%=id%>',
         titulo:$('#form-produto input[name=titulo').val(),
         genero:$('#form-produto input[name=genero]').val(),
         Ano:$('#form-produto input[name=Ano]').val(),
         sinopse:$('#form-produto textarea[name=sinopse]').val(),
         imagem:$('#form-produto input[name=imagem]').val(),
         promo:$('#form-produto input[name=promo]').val(),
         valor:$('#form-produto input[name=valor]').val(),
         trailer:$('#form-produto input[name=trailer]').val()
         

        
            },function(data,status){
             alert(data)
            },'json')
         })
        
    
        $('.bt-voltar').click(function(){
            location.href='/adm/relatorio-produtos'
        })
    })
        </script>
 <footer class="mt-5">
    <p>&copy;2022 - Todos os direitos reservados</p>
</footer>
</body>
</html>
