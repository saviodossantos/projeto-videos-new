<!Doctype html>
<html>

<head>
    <title>StreamOn</title>
    <meta charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/font-awesome/css/all.min.css">
    <link rel="icon" href="/imgs/SQUADONE.png">
</head>

<body>

    <div class="container">
        <header>
            <div class="row">
                <div class="col-sm-2">
                    <a href="/">
                        <img src="/imgs/SQUADONE.png" width="150">
                    </a>
                </div>
                <div class="col-sm-8 d-flex justify-content-center">

                    <img class="mt-2" width="210" src="/imgs/Streaming.png">

                </div>
                <div class="col-sm-2 mt-3 d-flex justify-content-end">
                    <% if (info.user){ %>
                    <div class="navbar-text">

                        <span class="d-inline-block mr-3 font-weight-bold text-white">
                            <%=info.user%>
                        </span>

                    </div>
                    <!-- <span id="bemVindo"></span> -->

                    
                        <div class="nav-item mt-1">
                            <a href="/logout" class="btn btn-danger btn-sm"><i class="fas fa-sign-out-alt"></i></a>
                        </div>
                    <% } else { %>
                        <div class="nav-item">
                            <a href="/login" class="btn btn-danger btn-sm col-sm-12"><i class="fas fa-sign-in-alt"></i> Entrar</a>
                            <a href="/cadastro" class="btn btn-danger btn-sm mt-2 col-sm-12"><i class="fas fa-user"></i> Cadastre-se</a>
                        </div>

                    <% } %>

                </div>
        </header>
